{{! Previous/next page links - only displayed on page 2+ }}
<div class="extra-pagination inner">
	{{pagination}}
</div>

{{! This is the post loop - each post will be output using this markup }}
{{#foreach posts}}
	<article class="content-post prose sm:prose-xl mb-12 md:bg-emerald-900 md:p-12 md:text-white {{post_class}}">
		<header class="post-header">
			<h2>
				<a href="{{url}}" class="md:text-emerald-400 md:hover:text-emerald-700">
					{{title}}
				</a>
			</h2>
		</header>
		{{#if profile_image}}
			<img src="{{img_url}}" role="presentation" />
		{{/if}}
		<section>
			<p>
				{{excerpt words="26"}}
				<a aria-label="{{title}}" href="{{url}}" class="md:text-emerald-400 md:hover:text-emerald-700">
					&raquo;
				</a>
			</p>
		</section>
		<footer>
			{{#if primary_author.profile_image}}
				<img
					class="h-5 rounded-full align-middle"
					src="{{primary_author.profile_image}}"
					alt="Author image"
					nopin="nopin"
				/>
			{{/if}}
			{{primary_author.name}}
			&mdash;
			<time datetime="{{date format="YYYY-MM-DD"}}">{{date format="DD MMMM YYYY"}}</time>
		</footer>
	</article>
{{/foreach}}

{{! Previous/next page links - displayed on every page }}
{{pagination}}