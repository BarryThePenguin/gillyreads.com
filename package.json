{
  "name": "gillyreads.com",
  "version": "2.0.0",
  "description": "Gill's blog",
  "author": {
    "name": "Jonathan Haines",
    "email": "jonno.haine@gmail.com",
    "url": "https://jonno.dev/"
  },
  "keywords": [
    "ghost-theme"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/barrythepenguin/gillyreads.com.git"
  },
  "bugs": "https://github.com/barrythepenguin/gillyreads.com/issues",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "start": "gulp",
    "stop": "gulp stopGhost",
    "pack": "NODE_ENV=production gulp",
    "postpack": "gscan -z ./gillyreads.zip",
    "test": "xo"
  },
  "dependencies": {
    "core-js": "^3.29.1",
    "instafeed.js": "v2.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.21.3",
    "@babel/preset-env": "^7.20.2",
    "@cloudflare/workers-types": "^4.20230321.0",
    "@esbuild-kit/esm-loader": "^2.5.4",
    "@tailwindcss/typography": "^0.5.9",
    "ava": "^5.2.0",
    "babel-loader": "^9.1.2",
    "browser-sync": "^2.28.3",
    "browserslist": "^4.21.5",
    "c8": "^7.13.0",
    "css-loader": "^6.7.3",
    "cssnano": "^5.1.15",
    "del": "^7.0.0",
    "fancy-log": "^2.0.0",
    "ghost-cli": "^1.24.0",
    "gscan": "^4.36.1",
    "gulp": "^4.0.2",
    "gulp-execa": "^4.5.0",
    "gulp-zip": "^5.1.0",
    "mini-css-extract-plugin": "^2.7.3",
    "miniflare": "^2.12.2",
    "node-libs-browser": "^2.2.1",
    "plugin-error": "^2.0.1",
    "postcss": "^8.4.21",
    "postcss-browser-reporter": "^0.6.0",
    "postcss-import": "^15.1.0",
    "postcss-loader": "^7.0.2",
    "postcss-reporter": "^7.0.5",
    "postcss-url": "^10.1.3",
    "prettier": "^2.8.4",
    "tailwindcss": "^3.2.7",
    "ts-node": "^10.9.1",
    "typeface-quicksand": "^1.1.13",
    "typescript": "^5.0.2",
    "undici": "^5.21.0",
    "webpack": "^5.76.2",
    "webpack-merge": "^5.8.0",
    "webpack-notifier": "^1.15.0",
    "wrangler": "^2.12.2",
    "xo": "^0.53.1"
  },
  "workspaces": [
    "workers/instagram-basic"
  ],
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--loader=@esbuild-kit/esm-loader",
      "--experimental-vm-modules"
    ]
  },
  "xo": {
    "prettier": true,
    "rules": {
      "import/no-extraneous-dependencies": [
        "error",
        {
          "packageDir": [
            "."
          ]
        }
      ]
    }
  },
  "browserslist": [
    "defaults"
  ]
}
