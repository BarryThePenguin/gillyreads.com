{
  "name": "gillyreads.com",
  "version": "2.0.0",
  "description": "Gill's blog",
  "author": {
    "name": "Jonathan Haines",
    "email": "jonno.haine@gmail.com",
    "url": "https://jonno.dev/"
  },
  "keywords": [
    "ghost-theme"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/barrythepenguin/gillyreads.com.git"
  },
  "bugs": "https://github.com/barrythepenguin/gillyreads.com/issues",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "start": "gulp",
    "stop": "gulp stopGhost",
    "pack": "NODE_ENV=production gulp",
    "postpack": "gscan -z ./gillyreads.zip",
    "test": "xo",
    "prepare": "husky install"
  },
  "dependencies": {
    "core-js": "^3.33.2",
    "instafeed.js": "v2.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.2",
    "@babel/preset-env": "^7.23.2",
    "@cloudflare/workers-types": "^4.20231025.0",
    "@esbuild-kit/esm-loader": "^2.6.5",
    "@tailwindcss/typography": "^0.5.10",
    "ava": "^5.3.1",
    "babel-loader": "^9.1.3",
    "browser-sync": "^3.0.2",
    "browserslist": "^4.21.5",
    "c8": "^8.0.1",
    "css-loader": "^6.8.1",
    "cssnano": "^6.0.1",
    "del": "^7.1.0",
    "fancy-log": "^2.0.0",
    "ghost-cli": "^1.25.3",
    "gscan": "^4.36.1",
    "gulp": "^4.0.2",
    "gulp-execa": "^6.0.0",
    "gulp-zip": "^6.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.2",
    "mini-css-extract-plugin": "^2.7.6",
    "miniflare": "^2.11.0",
    "node-libs-browser": "^2.2.1",
    "plugin-error": "^2.0.1",
    "postcss": "^8.4.31",
    "postcss-browser-reporter": "^0.7.0",
    "postcss-import": "^15.1.0",
    "postcss-loader": "^7.3.3",
    "postcss-reporter": "^7.0.5",
    "postcss-url": "^10.1.3",
    "prettier": "^3.0.3",
    "tailwindcss": "^3.3.5",
    "ts-node": "^10.9.1",
    "typeface-quicksand": "^1.1.13",
    "typescript": "^5.0.2",
    "undici": "^5.27.2",
    "webpack": "^5.89.0",
    "webpack-merge": "^5.10.0",
    "webpack-notifier": "^1.15.0",
    "wrangler": "^3.37.0",
    "xo": "^0.56.0"
  },
  "workspaces": [
    "workers/instagram-basic"
  ],
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--loader=@esbuild-kit/esm-loader",
      "--experimental-vm-modules"
    ]
  },
  "xo": {
    "extends": ["prettier"],
    "rules": {
      "import/no-extraneous-dependencies": [
        "error",
        {
          "packageDir": [
            "."
          ]
        }
      ]
    }
  },
  "browserslist": [
    "defaults"
  ],
  "lint-staged": {
    "*.{cjs,js,ts,css,md}": "prettier --write"
  }
}
